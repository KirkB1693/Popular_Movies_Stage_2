<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="DetailText">
        <item name="android:layout_marginLeft">@dimen/detail_layout_margins</item>
        <item name="android:layout_marginRight">@dimen/detail_layout_margins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="DetailReleaseDate">
        <item name="android:layout_marginLeft">@dimen/detail_layout_margins</item>
        <item name="android:layout_marginRight">@dimen/detail_layout_margins</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorSecondaryText</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="MainActivityEmptyViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/empty_text_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ReviewAuthorStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/review_layout_margin_normal</item>
        <item name="android:layout_marginLeft">@dimen/review_layout_margin_normal</item>
        <item name="android:layout_marginTop">@dimen/review_layout_margin_small</item>
        <item name="android:layout_marginEnd">@dimen/review_layout_margin_normal</item>
        <item name="android:layout_marginRight">@dimen/review_layout_margin_normal</item>
        <item name="android:layout_marginBottom">@dimen/review_layout_margin_small</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

    <style name="ReviewTextStyle" parent="ReviewAuthorStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textSize">16sp</item>
        <item name="android:scrollHorizontally">false</item>
    </style>

    <style name="TrailerEmptyViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/empty_text_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReviewsEmptyViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/empty_text_size</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
